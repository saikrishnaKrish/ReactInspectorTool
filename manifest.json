{
  "manifest_version": 3,
  "name": "React Inspector Pro",
  "version": "1.5.1",
  "description": "On-page React component inspector with props, state, refs, and performance auditing.",
  "author": "Sai Krishna Kanteti",
  "action": {
    "default_title": "React Inspector Pro"
  },
  "permissions": [
    "storage",
    "activeTab"
  ],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["inject.js"],
      "run_at": "document_end",
      "world": "MAIN"
    }
  ],
  "commands": {
    "_execute_action": {
      "suggested_key": {
        "default": "Ctrl+Shift+Y",
        "mac": "Command+Shift+Y"
      }
    }
  },
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'"
  }
}