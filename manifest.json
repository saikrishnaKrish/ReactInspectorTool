{
  "manifest_version": 3,
  "name": "React Inspector Pro",
  "version": "2.6.0",
  "description": "High-fidelity React component inspector with JSX export, computed styles, and global search.",
  "author": "Sai Krishna Kanteti",
  "icons": {
    "16": "icons/icon16.svg",
    "32": "icons/icon32.svg",
    "48": "icons/icon48.svg",
    "128": "icons/icon128.svg"
  },
  "action": {
    "default_title": "React Inspector Pro",
    "default_icon": "icons/icon128.svg"
  },
  "permissions": [
    "storage",
    "activeTab",
    "clipboardWrite"
  ],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["inject.js"],
      "run_at": "document_end",
      "world": "MAIN"
    },
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_start"
    }
  ],
  "commands": {
    "_execute_action": {
      "suggested_key": {
        "default": "Ctrl+Shift+Y",
        "mac": "Command+Shift+Y"
      }
    }
  }
}